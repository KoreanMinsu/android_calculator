<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="결과값" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:weightSum="4">

        <Button
            android:id="@+id/btn7"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="9" />

        <Button
            android:id="@+id/btn_div"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:weightSum="4">

        <Button
            android:id="@+id/btn4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="6" />

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="*" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0px"
        android:weightSum="4">

        <Button
            android:id="@+id/btn1"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="3" />

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="00px"
        android:weightSum="4">

        <Button
            android:id="@+id/btn0"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_weight="2"
            android:text="0" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="+" />
        <Button
            android:id="@+id/btn_result"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:text="=" />


    </LinearLayout>

</LinearLayout>